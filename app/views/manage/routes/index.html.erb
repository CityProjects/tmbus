<h3>Routes</h3>
<hr />

<%- Route.find_each do |route| %>

  <div class="route-container">
    <h4><%= "#{route.name} (##{route.eid} : #{route.ename})" %></h4>

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Statie</th>
          <th>Dir</th>
          <th>Ord</th>
          <th>Nume scurt</th>
          <th>Nume Lung</th>
        </tr>
      </thead>

      <tbody>

      <%- route.route_stops.each do |rs|
        stop = rs.stop
      %>
        <tr>
          <td>#<%= stop.eid %> : <%= stop.ename %></td>
          <td><%= rs.direction %></td>
          <td><%= rs.order_idx %></td>
          <td><%= stop.name %></td>
          <td><%= stop.long_name %></td>
        </tr>
      <%- end %>

      </tbody>
    </table>
  </div>


  <p>&nbsp;</p>
<%- end %>
